<h1><%= @movie.name %></h1>
<br></br>
<%=image_tag(@movie.image.url(:medium)) %>
<p> Genre:<%=@movie.genre %></p>
<p>Release Date:<%=@movie.release_date %></p>
<p> Cast:<%=@movie.cast %></p>
<p><%= link_to "Home Page", movies_path, :class => 'btn btn-success' %></p>

<% if current_user != nil && current_user.id == @movie.user_id %>
  <p><%= link_to "Delete", movie_path(@movie), method: "delete", :class => 'btn btn-danger' %></p>
<% end %>
